<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="sign_in">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#181D2D</item>
        <item name="android:fontFamily">@font/poppins_medium</item>>
    </style>
    <style name="welcome">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:translationY">-3.12sp</item>
    </style>
    <style name="forgot_pass">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#324A59</item>
        <item name="android:fontFamily">@font/poppins_medium</item>>
    </style>
    <style name="name">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>
    <style name="title">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>
    <style name="order_specification_title">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.89sp</item>
        <item name="android:gravity">top</item>
    </style>
    <style name="cup_ml_size">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
</resources>